// footer styles
footer
    max-width: max-content-width
    margin: auto
    padding-bottom 80px

#footer
    background-color white
    color cd-theme-orange
    height 440px
    position: relative

    button
        @extends .light-dropshadow
        background-color cd-theme-orange
        color white
        width 300px
        height 40px
        border-radius: 20px

#footer-contact-button
    position: absolute
    top 220px
    left 50%
    transform translateX(-50%)

#footer-bottom-line
    position absolute
    left 0
    bottom 0
    padding 0 40px
    width 100%
    box-sizing: border-box
    p
        line-height: 20px

#footer-info 
    display flex
    justify-content: space-between

#footer-social-media-buttons
    margin-top 20px
    margin-left -5px
    a
        height: 40px
        width: 40px
        margin-right 13px
