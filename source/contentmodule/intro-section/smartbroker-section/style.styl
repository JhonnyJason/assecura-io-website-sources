/*==========================================================
 Smartbroker Section
==========================================================*/
#smartbroker-section
    .content-frame
        height auto

    h1 
        padding-top 200px
        margin-left 80px
        margin-bottom 140px

    h2
        margin-left auto
        margin-right auto    
        margin-top: 30px
        margin-bottom 35px
        font-size: 34px
        font-family: 'NotoSans Regular'
        line-height: 140%
        width: fit-content
        min-height: 96px
    p
        line-height: 160%

#smartbroker-cards
    display flex
    justify-content: space-between

    .smartbroker-card
        @extends .dropshadow
        width 390px
        height 560px
        background-color cd-card-background
        border-radius: 120px
        padding 0 40px
        box-sizing: border-box
    
    .smartbroker-card-image
        height 140px
        width 140px
        background-size: cover
        background-repeat: no-repeat
        margin auto
        position: relative
        top -25px

/*==========================================================
 Smartbroker Images
==========================================================*/
#contract-image
    background-image url('/img/contract.svg')
#individualized-image
    background-image url('/img/screen.svg')
#transparence-image
    background-image url('/img/transparence.svg')
