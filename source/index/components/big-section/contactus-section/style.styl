/*==========================================================
 Outro Section
==========================================================*/
#contactus-section
    background-color cd-theme-orange
    img
        display block
        object-fit: contain
        height 100%
        width 50%
        box-sizing: border-box
        margin-right auto
        padding 80px
    
    .decoration-gap
        height 100lvh
        width 100%

    .content-frame
        position relative
        height 100%

#decoration-application 
#decoration-protection 
#decoration-assecura
    height 100lvh
    width 100%
    padding-top 25%
    padding-bottom 25%


#decoration-assecura
    padding 80px 0
    box-sizing: border-box
    svg
        width 50%
        height 400px
        color cd-theme-orange


#contactus-calltoaction-frame
    @extends .full-height
    width 50%
    color black
    position fixed
    top 0
    right 0
    transform translateX(102%)
    transition: transform 0.3s
    z-index 80

#contactus-calltoaction-content
    position: absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 100%
    text-align: center

    p
        font-family: "Poppins Light"
        font-size: 50px
        line-height: 60px
    a
        @extends button
        color cd-theme-orange
        background-color cd-flash
        margin-top 40px

#contactus-calltoaction-frame.here
    transform translateX(0)
