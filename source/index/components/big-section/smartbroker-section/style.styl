/*==========================================================
 Smartbroker Section
==========================================================*/
#smartbroker-section
    .content-frame
        height auto

    h2
        padding-top 200px
        margin-bottom 160px
        text-align: center
        color cd-flash
    h3
        margin-left auto
        margin-right auto    
        // margin-top: 30px
        margin-bottom 30px
        width: fit-content
        min-height: 96px
        text-align: center
        color cd-flash

    p
        margin-bottom 12px
        text-align: center


#smartbroker-cards
    display flex
    justify-content: space-between

    .smartbroker-card
        @extends .dropshadow
        width 390px
        height 500px
        background-color cd-card-background
        // border-radius: 120px
        padding 0 10px
        box-sizing: border-box
        a
            color white
            text-decoration: underline
    
    .smartbroker-card-image
        height 180px
        width 180px
        // background-color black
        background-size: contain
        background-position: center
        background-repeat: no-repeat
        margin auto
        position: relative
        top -60px

/*==========================================================
 Smartbroker Images
==========================================================*/
#contract-image
    background-image url('/img/contract.svg')
#individualized-image
    background-image url('/img/screen.svg')
#transparence-image
    background-image url('/img/transparence.svg')


@media mobilescreen
    #smartbroker-section

        h2
            font-size 25px
        h3
            min-height: auto

    #smartbroker-cards
        flex-direction: column
        gap 80px
        align-items: center

        .smartbroker-card
            width 90%
            height auto
            padding-bottom 60px

        .smartbroker-card-image
            height 120px
            width 120px
            top -40px
