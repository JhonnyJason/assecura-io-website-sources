/*==========================================================
 Hero Section
==========================================================*/
#hero-section
    position relative
    margin-bottom -80px
#hero-grid
    position fixed
    top  50%
    left 50%
    transform: translate(-50%, -50%)
    width: inner-content-width
    // display grid
    // grid-template-columns: 1fr 1fr
    display flex
    justify-content: space-between
    // z-index -1

#hero-grid.hidden
    transform: translate(-50%, 102%)
    

#hero-right
    width: 400px
    align-self center
#hero-left
    width: 460px
    align-self: center


#hero-title
    color cd-theme-orange
    line-height 36px
    white-space: nowrap
    vertical-align: middle
    // b
    //     font-size 70px
    //     font-family: "NotoSans Light"
    //     font-weight: lighter
    //     color cd-theme-orange
    //     text-transform: uppercase
    span
        font-size 18px
        color cd-foreground
        text-shadow: none
        margin-left 5px
        position relative
        top -3px

#hero-logo
    height 320px
    width 320px
    color cd-theme-orange
    display block
    margin auto

#hero-text
    // font-family: "NotoSans Light"
    margin-top 25px
    line-height 130%


#protectnow-button
    @extends button
    background-color cd-theme-orange
    color white
    margin-top 15px

#hero-bottom-decoration
    height 60px
    width 100%
    background-color cd-theme-orange
    position absolute
    bottom 0
    overflow: hidden
    border-radius 60px 60px 0 0

        