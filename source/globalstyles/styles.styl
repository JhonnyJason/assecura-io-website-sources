// globalstyles styles
/*==========================================================
 Fonts
==========================================================*/
@font-face
    font-family: 'NotoSans Regular'
    src: url('font/NotoSans-Regular.ttf')
    font-display: swap;

@font-face
    font-family: 'NotoSans Bold'
    src: url('font/NotoSans-Bold.ttf')
    font-display: swap;

@font-face
    font-family: 'NotoSans Light'
    src: url('font/NotoSans-Light.ttf')
    font-display: swap;

/*==========================================================
 Color Theme
==========================================================*/
cd-foreground = #000
cd-background = #fff
cd-flash = #ff5733

cd-theme-darkred = #B32818
cd-theme-orange = #ff5733

cd-assecura-red = #a61e1e

/*==========================================================
 Global Variables
==========================================================*/
max-content-width = 1420px
inner-content-width = 840px
min-screen-height = 650px
// mobile-side-padding = 15px


/*==========================================================
 Global Tag Styles
==========================================================*/
body
    background-color cd-background
    transition background-color 0.7s
    color cd-foreground
    // font-family: Arial, Helvetica, sans-serif
    // font-family: 'NotoSans Regular'
    font-family: 'NotoSans Light'
    font-size: 16px
    width 100%
    overflow-x hidden
    overflow-y: auto
    height 100%

// nav
//     font-size: 16px
h1
    font-size: 40px
    font-family: "NotoSans Light"
    line-height: 60px
h2
    font-size: 20px
    font-family: "NotoSans Light"
    line-height: 40px
p
    font-size: 16px

b
    font-family: "NotoSans Bold"

svg
    height inherit
    width inherit


/*==========================================================
 Global Classes
==========================================================*/
// .light-dropshadow
//     box-shadow 0 3px 10px 0 #0002
.light-dropshadow
    box-shadow 2px 2px 7px 0 #0004
.dropshadow
    box-shadow 2px 2px 10px 2px #0004

.full-height
    height 100vh
    height 100lvh
    min-height min-screen-height
