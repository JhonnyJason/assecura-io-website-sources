// globalstyles styles
/*==========================================================
Fonts
==========================================================*/
@font-face
    font-family: 'Myriad Pro Regular'
    src: url('font/myriad-pro-regular.ttf') format('ttf')
    // font-display: swap;

@font-face
    font-family: 'Myriad Pro Bold'
    src: url('font/myriad-pro-bold.ttf') format('ttf')
    // font-display: swap;

@font-face
    font-family: 'Myriad Pro Light'
    src: url('font/myriad-pro-light.otf') format('otf')
    // font-display: swap;

/*==========================================================
Color Theme
==========================================================*/
cd-assecura-red = #a61e1e
cd-theme-orange = #ff5733
cd-foreground = #000
cd-flash = #ff5733
cd-background = #fff

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px


/*==========================================================
General Tag Styles
==========================================================*/
// html
//     width 100%
//     height 100%
//     height 100lvh
//     overflow hidden
body
    background-color cd-background
    transition background-color 0.7s
    color cd-foreground
    font-family: 'Myriad Pro Regular', sans-serif
    font-size: 25pt
    width 100%
    overflow-x hidden
    overflow-y: auto
    height 100%

body.orange
    background-color cd-theme-orange

nav
    font-size: 25pt
h1
    font-size: 60pt
h2
    font-size: 15pt
p
    font-size: 12pt


svg
    height inherit
    width inherit