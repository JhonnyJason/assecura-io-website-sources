/*==========================================================
 General Content Styles
==========================================================*/
.content-frame
    width 100%
    max-width: max-content-width
    margin: auto

/*==========================================================
 Specific Content Styles
==========================================================*/
#protectnow-frame

    position: relative
    // padding-top 300px
    padding-top 42vh
    padding-bottom 300px
    min-height 100vh
    min-height 100lvh
    height auto
    box-sizing: border-box
    background-color: cd-theme-orange
     
    h1
        color #fff
        margin-bottom 40px
    p
        color #fff
        box-sizing: border-box
        margin-left auto
        margin-right auto
        margin-bottom 60px
        text-align: left
        font-family "Poppins Light"
        font-size 40px
        line-height 50px

    form
        width 720px
        margin-right auto
        display grid
        grid-gap 40px
        grid-template-columns: 1fr 1fr
        text-align: center
        margin-bottom 60px
        accent-color: cd-foreground

        .double-cell
            grid-column: span 2
        .input-cell
            label
                display block
                margin-bottom 16px

            input
                @extends .dropshadow
                background-color #fff
                display block
                width 100%
                padding 0 20px
                box-sizing: border-box
                height 40px
                border-radius: 20px
                line-height 40px
                // text-align: center
                border: none
                // padding 0

        .radiobutton-cell
            text-align: left
            margin auto
            p
                font-size: 20px
                color #000
                margin-bottom 16px
            
            label
                line-height 150%

        .button-cell
            button
                display block
                margin-left auto
                background-color #fff
                color cd-theme-orange
                