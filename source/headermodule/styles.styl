// header styles
home-button-size = 80px

/*==========================================================*/
header
    // position: -webkit-sticky
    // position: sticky
    position fixed
    width 100%
    max-width: max-content-width
    margin: auto
    top: 0
    left 50%
    transition: transform 0.3s
    transform translateX(-50%)
    z-index 99


#header
    display: grid
    grid-template-columns: home-button-size auto
    padding 80px 80px 0 80px
    align-items: center
    justify-content: space-between
    color cd-theme-orange
    // transition: color 0.5s

#home-button
    align-self: end
    height home-button-size
    width home-button-size
    
#navigation-bar
    box-shadow 2px 2px 5px 0 #0002, inset 2px 2px 5px 0 #0002
    position relative
    display grid
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr
    height 40px
    border solid 2px
    box-sizing: border-box
    border-radius 20px
    transition background-color 0.7s
    overflow: hidden
    a
        // text-shadow: 1px 1px 2px #0003
        align-self: center
        width: 160px
        text-align: center
        transition: color 0.3s cubic-bezier(0,0.8,0.8,1) 

#selected-chapter-background
    position absolute
    top -2px 
    left 0
    opacity 0
    z-index: -1
    width 160px
    border-radius: 20px
    height 40px
    transition:  all 0.3s cubic-bezier(0,0.8,0.8,1)
    background-color: white

.on-cyberprotect
    #selected-chapter-background
        opacity: 1
        transform: translateX(0)

.on-dataprotect
    #selected-chapter-background
        opacity: 1
        transform: translateX(160px)

.on-electronicsprotect
    #selected-chapter-background
        opacity: 1
        transform: translateX(320px)



header.gone
    transform translate(-50%, -102%)

header.smaller
    transform translate(-50%, -60px)

header.inverted
    #header
        color #fff
    
    #navigation-bar
        a
            text-shadow: 1px 1px 2px #0008

header
    .on-cyberprotect
        #nav-cyberprotect
            color cd-theme-darkred
            text-shadow: none !important
    .on-dataprotect
        #nav-dataprotect
            color cd-theme-darkred
            text-shadow: none !important
    .on-electronicsprotect
        #nav-electronicsprotect
            color cd-theme-darkred
            text-shadow: none !important

header.no-navbar
    #navigation-bar
        opacity 0
        z-index -1