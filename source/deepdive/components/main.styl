/*==========================================================
 General Content Styles
==========================================================*/

section
    background-color: cd-theme-orange
    position: relative

.content-frame
    position: relative
    padding-top 36vh
    // padding-bottom 300px
    min-height 100vh
    min-height 100lvh
    height auto
    box-sizing: border-box
    max-width: max-content-width
    margin auto
    a
        @extends .light-dropshadow
        display block
        margin-left auto
        background-color white
        color cd-theme-orange
        width 300px
        height 40px
        border-radius: 20px
        font-family: NotoSans Regular
        line-height 40px
        text-align: center

/*==========================================================
