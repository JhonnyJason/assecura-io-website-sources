/*==========================================================
 Common Threats Section
==========================================================*/
#commonthreats-section
    padding-top 1px
    background-color: cd-theme-orange
    position relative
    
    .content-frame
        // position relative
        padding-top 10vh
        // padding-left 80px
        // padding-right 80px
        margin-top 20vh
        width max-content-width
        
    #threats-circle-container
        position sticky
        top 0
        width 50%
        height 100vh
        min-width 700px
        min-height 700px
        overflow: visible

        #threats-circle
            position absolute
            top 50%
            left 0
            width 100%
            padding-bottom 100%
            border solid 4px #fff
            border-radius: 50%
            transform: translateY(-50%)

        #threats-container
            position absolute
            top 0
            left 0
            height 100%
            width 100%

            h2
                color #fff
                text-align center
                font-size 40px
                line-height: 50px
                margin-top 70px
            nav
                position: absolute
                bottom 45px
                left 50%
                transform translateX(-50%)
                display flex
                justify-content: center
                padding-top 20px

                a
                    height 15px
                    width 15px
                    transform: scale(0.5)
                    transition transform 0.3s
                    margin-left 5px
                    cursor pointer
                    border solid 1px #aaa
                a.active
                    transform: scale(1.0)

            a#threats-call-to-action
                display: block
                position absolute
                bottom 80px
                left 50%
                transform translateX(-50%)
        
        #threats-content
            position: absolute
            top 0
            left 0
            width 100%
            height 100%
            
            .active
                opacity: 1
                z-index: 1

        #threats-content > *
            position absolute
            top 50%
            left 50%
            width 86%
            transform translate(-50%, -50%)
            opacity 0
            z-index -1
            text-align center
            transition: opacity 0.5s ease-out

            h3
                font-size: 30px
            p
                line-height 140%
                text-align: left
                padding 10px

    #threats-right-container
        width 50%
        margin-left auto
        padding 0
        padding-left 20px
        margin-top -20vh
        box-sizing: border-box

        .right-frame
            scroll-behavior: smooth
            min-height 100vh
            padding-bottom 50vh
        
            h1
                color #fff
                font-size 50px
                line-height 60px
                margin-bottom 40px
            
            h2
                color #fff
                font-size 30px
                line-height: 35px
                margin-top 40px
                padding-left 30px
                margin-bottom 20px

            p                 
                padding-left 30px
            
            .activatable-container
                h2
                    padding-right 50px
                    position relative
                p
                    opacity 0
                    z-index: -1
                    transition: opacity 0.3s
                    user-select: none

            button
                @extends .dropshadow
                display: inline-block
                vertical-align: middle
                position: relative
                // position absolute
                // right 0
                // top 9px
                // // top 50%
                // // transform translateY(-50%)
                color cd-theme-orange
                background-color white
                box-shadow 2px 2px 5px 0 #0002, inset 2px 2px 5px 0 #0002
                height 26px
                width 45px
                border-radius: 15px // 36(height) + 2*2(border) -> 40px total height
                cursor pointer

            button:after
                box-shadow inset 2px 2px 5px 0 #0002
                content ""
                height 26px
                width 26px
                border-radius: 50%
                box-sizing: border-box
                background-color cd-button-red
                border solid 1px white
                box-sizing: border-box
                position absolute
                top 0
                left 0
                z-index: 2
                transition: all 0.3s cubic-bezier(0, 0.8, 0.8, 1)

            .active
                p
                    opacity: 1
                    z-index: 1
                    user-select: auto

                button:after
                    background-color cd-button-green
                    transform translateX(24px)
        


@media mobilescreen
    #commonthreats-section
        padding-top 40vh
        position relative
        
        .content-frame
            position relative
            padding-top 0
            margin-top 0
            width 100%
            
        #threats-circle-container
            position static
            width 100%
            height auto
            min-width auto
            min-height auto

            #threats-circle
                position static
                top 0
                left 0
                width 100%
                padding-bottom 0
                border none
                border-radius: 0
                transform: none

            #threats-container
                position static
                top 0
                left 0
                width 90%
                height: auto
                margin auto

                h2
                    color #fff
                    text-align center
                    font-size 30px
                    line-height: 35px
                    margin-top 0
                    margin-bottom 40px
                    overflow: hidden
                    text-overflow: ellipsis
                    position absolute
                    top -70px
                    width 90%
                nav
                    position: fixed
                    bottom 15px
                    left 50%
                    transform translateX(-50%)
                    display flex
                    justify-content: center
                    padding-top 20px
                    z-index 200

                    a
                        height 15px
                        width 15px
                        transform: scale(0.5)
                        transition transform 0.3s
                        margin-left 5px
                        cursor pointer
                        border solid 1px #aaa

                a#threats-call-to-action                    
                    display: block
                    position fixed
                    bottom 40px
                    left 50%
                    transform translateX(-50%)
                    z-index 200
            
            #threats-content
                position: absolute
                // position: static
                top 0
                left 5%
                width 90%
                margin auto
                height auto
                // opacity: 1
                // z-index: 1
                // padding-top 30vh
                
            #threats-content > *
                position static
                top 0
                left 0
                width 100%
                transform none
                opacity 1
                z-index 1
                height 200vh
                padding-bottom 100vh
                box-sizing: border-box

                h3
                    font-size: 20px
                    margin-bottom 20px
                    padding-top 40px
                    overflow: hidden
                    text-overflow: ellipsis
                p
                    // line-height 140%
                    // text-align: left
                    padding 0

        #threats-right-container
            position: static
            top 0
            left 0
            width 100%
            margin-left auto
            padding-left 0
            margin-top 0

            .right-frame
                min-height auto
                height 200vh
                padding-bottom 0
                padding-top 100vh
                width 90%
                margin auto
                box-sizing: border-box

                h1
                    color #fff
                    font-size 30px
                    line-height 35px
                    margin-bottom 40px
                    overflow: hidden
                    text-overflow: ellipsis

                h2
                    color #fff
                    font-size 20px
                    line-height: 23px
                    margin-top 40px
                    padding-left 0
                    margin-bottom 20px
                    overflow: hidden
                    text-overflow: ellipsis

                p                 
                    padding-left 0
                
